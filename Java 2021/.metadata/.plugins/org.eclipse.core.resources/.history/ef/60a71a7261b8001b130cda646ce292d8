	JFrame component;
	int count;
	public onDrag(){
		
	}
	
	
		public void mouseClicked(MouseEvent e) {
			int count = e.getClickCount();
			if(count == 2)
//				Form1.this.dispose();
		}
		@Override
		public void mousePressed(MouseEvent e) {
