package puzzle;

import javax.swing.JPanel;

import graphics.PButton;

import java.awt.Color;

public class Puzzzle1 extends JPanel {
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	public Puzzzle1() {
		setLayout(null);
		
		JPanel panel = new JPanel();
		panel.setBounds(240, 5, 1, 1);
		panel.setLayout(null);
		panel.setBackground(new Color(0, 0, 0, 0));
		add(panel);
		
		PButton puzzle1 = new PButton("Puzzle 1");
		puzzle1.setBounds(100, 100, 140, 40);
		
		PButton puzzle2 = new PButton("Puzzle 2");
		puzzle2.setBounds(100, 150, 140, 40);
		
    	PButton puzzle3 = new PButton("Puzzle 3");
    	puzzle3.setBounds(100, 210, 140, 40);
      
    	panel.add(puzzle1);
    	panel.add(puzzle2);
    	panel.add(puzzle3);
	}
}
